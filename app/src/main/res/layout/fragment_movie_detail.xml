<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/poster"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                />

            <TextView
                style="@style/MyTextHighLight"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:layout_marginTop="16dp"
                android:textSize="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                />

            <TextView
                style="@style/MyText"
                android:id="@+id/isAdult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="isAdult"
                android:paddingTop="4dp" />

            <TextView
                style="@style/MyText"
                android:id="@+id/popularity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="popularity"
                android:paddingTop="4dp" />

            <TextView
                style="@style/MyText"
                android:id="@+id/voteAvg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="voteAvg"
                android:paddingTop="4dp" />

            <TextView
                style="@style/MyText"
                android:id="@+id/voteCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="voteCount"
                android:paddingTop="4dp" />

            <TextView
                style="@style/MyText"
                android:id="@+id/originalLang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="priginalLang"
                android:paddingTop="4dp"
                />

            <TextView
                style="@style/MyText"
                android:id="@+id/originalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="originalTitle"
                android:paddingTop="4dp"
                />

            <TextView
                style="@style/MyText"
                android:id="@+id/releaseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="releaseDate"
                android:paddingTop="4dp" />



            <TextView
                style="@style/MyText"
                android:id="@+id/overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="overview"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textSize="16dp"/>
        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:visibility="visible"/>
</RelativeLayout>
